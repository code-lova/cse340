<div class="account-container">
  <h1><%= title %></h1>

  <% if (messages) { %>
  <ul class="flash-message">
    <li><%= messages %></li>
  </ul>
  <% } %>
  
  <div class="container">
    <% if (user) { %>
        <h2>Welcome <%= user.account_firstname %></h2>

        <p>You're logged in</p>

        <!-- Update Account Information Link -->
        <p><a href="/account/update">Edit Account Information</a></p>

        <% if (user.account_type === 'Admin' || user.account_type === 'Employee') { %>
            <h3>Inventory Management</h3>
            <p><a href="/inv/">Go to Inventory Management</a></p>
        <% } %>

    <% } else { %>
        <p>Please <a href="/account/login">log in</a> to access your account.</p>
    <% } %>
</div>
</div>
